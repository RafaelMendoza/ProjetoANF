@model ProjetoANFWeb.Models.AuthorViewModel

@{
    ViewBag.Title = "Editar Autor";
}

@using (Ajax.BeginForm("Create", "Author", new AjaxOptions
{
    OnSuccess = "AjaxFormOnSuccess(data, ['Name', 'IsActive'])",
    OnFailure = "AjaxFormOnError(xhr, status, error)"
}))
{
    @Html.AntiForgeryToken()
    
    <div class="panel panel-default">

        <div class="panel-heading">
            Editar Autor
        </div>

        <!--Hidden Fields-->
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(m => m.CreatedBy)
        @Html.HiddenFor(m => m.ModifiedBy)
        @Html.HiddenFor(m => m.CreatedDate)
        @Html.HiddenFor(m => m.ModifiedDate)

        <div class="panel-body">
            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        <label class="switch">
                            @Html.EditorFor(model => model.IsActive)
                            <span class="slider"></span>
                        </label>
                        @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <div class="panel-footer">
            <input type="submit" value="Editar" class="btn btn-default" />
            @Html.ActionLink("Lista de Autores", "Index", "Author", new { @class = "btn btn-secondary" })
        </div>

    </div>
}


